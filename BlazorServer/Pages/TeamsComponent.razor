@code{

    #region Variables

    private int currentCount = 0;
    private List<Team> Teams;
    private FirstCascadingComponent FirstChildComponent;
    private EditComponent<Team> Editor;
    private Modal modal;

    #endregion

    #region Properties

    #endregion

    #region Methods

    protected override void OnInitialized()
    {
        base.OnInitialized();

        Teams = new List<Team>()
{
            new Team {Id = 1, Name = "Hearts Of Oak", Region = "Accra", },
            new Team {Id = 2, Name = "Asante Kotoko", Region = "Kumasi"},
            new Team {Id = 3, Name = "Berekum Chelsea", Region = "Western"},
            new Team {Id = 4, Name = "Liberty Professionals", Region = "Accra"}
        };

    }

    private void SetCurrentCountHandler(int v)
    {
        currentCount++;
    }

    #endregion

    #region Models

    class Team
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public string Region { get; set; }
    }

    private void EditTeam(Team team)
    {
        Editor.TeamToEdit = team;
        StateHasChanged();
    }

    #endregion

} 